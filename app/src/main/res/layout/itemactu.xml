<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/miniatureActu"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="100dp"></ImageView>

    <TextView
        android:id="@+id/titreActu"
        android:layout_width="310dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@+id/miniatureActu"
        app:layout_constraintTop_toTopOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="310dp"></TextView>

    <TextView
        android:id="@+id/dateActu"
        android:layout_width="310dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/titreActu"
        app:layout_constraintStart_toEndOf="@+id/miniatureActu"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="310dp"></TextView>

    <TextView
        android:id="@+id/descActu"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/dateActu"
        app:layout_constraintStart_toEndOf="@+id/miniatureActu"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="310dp"></TextView>





</androidx.constraintlayout.widget.ConstraintLayout>